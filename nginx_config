# HTTP server - redirect to HTTPS
server {
    listen 80;
    listen [::]:80;

    server_name jarvis-externall-api.tech www.jarvis-externall-api.tech;

    # Redirect all HTTP to HTTPS
    return 301 https://$host$request_uri;
}

# HTTPS server
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name jarvis-externall-api.tech www.jarvis-externall-api.tech;

    # SSL certificates (adjust paths if needed)
    ssl_certificate /etc/letsencrypt/live/jarvis-externall-api.tech/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jarvis-externall-api.tech/privkey.pem;

    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # Logging
    access_log /var/log/nginx/jarvis-api-access.log;
    error_log /var/log/nginx/jarvis-api-error.log;

    # Max upload size (adjust as needed)
    client_max_body_size 10M;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_http_version 1.1;

        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;

        # WebSocket support (if needed)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}
